model Messages {
    id      Int      @id @default(autoincrement())
    chatid  String
    text    String
    sender  Int
    sent_at DateTime

    @@map(name: "messages")
}

model MessageReads {
    id         Int      @id @default(autoincrement())
    message_id Int
    account_id Int
    read_at    DateTime

    @@map(name: "message_reads")
}
